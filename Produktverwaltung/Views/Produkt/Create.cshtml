

@model Produktverwaltung.Models.Produkt

<form method="post" asp-action="Create">
<div class="border p-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row ">
            <h2 class="text-black-50 pl-3">Produkt hinzufügen</h2>
        </div>
        <div class="row">
        <div class="col-12">
         <div class="form-group row ">
               <div class="col-3">
                <label asp-for="Name"></label>
                </div>
                <div class="col-3">
                <label asp-for="Preis"></label>
                </div>
                 <div class="col-3">
                <label asp-for="Menge"></label>
                </div>
                <div class="col-3">
                <label asp-for="CategoryId"></label>
                </div>
                 
         </div>       
         
        <div class="form-group row ">
              <div class="col-3">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span> 
                </div>
                <div class="col-3">
                <input asp-for="Preis" class="form-control"/>
                <span asp-validation-for="Preis" class="text-danger"></span>               
            </div>
                <div class="col-3">
                <input asp-for="Menge" class="form-control"/>
                </div>
                 <div class="col-3">
                <input asp-for="CategoryId" class="form-control">
                <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
          </div>
          </div>
        <div class="form-group row ">
              <div class="col-8 offset-2 row" >
                <div class="col">
                <input type="submit" class="btn btn-info w-50" value="Create"/>
                </div>
                <div class="col">
                 <a asp-action="Index" class="btn btn-danger w-50">Back</a>
                </div>
          
        </div>
      </div>  
    
    </div>
</div>
</form>
@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
    }