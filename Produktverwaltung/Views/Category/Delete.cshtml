
@model Produktverwaltung.Models.Category
<form method="post" asp-action="DeletePost">
    <input asp-for="CategoryId" hidden/>
  <div class="border p-3">
    <div class="form-group row ">
            <h2 class="text-black-50 pl-3">Category hinzufügen</h2>
        </div>
        <div class="row">
        <div class="col-12">
            <div class="form-group row ">
            <div class="col-6">
                <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                <label asp-for="Bescreibung"></label>
                </div>
                
         </div>
       
        <div class="form-group row ">
              <div class="col-6">
                <input asp-for="Name" disabled class="form-control"/>
                </div>
                <div class="col-6">
                <input asp-for="Bescreibung" disabled class="form-control"/>
                </div>
          </div>
          
        <div class="form-group row ">
              <div class="col-8 offset-2 row" >
                <div class="col">
                <input type="submit" class="btn btn-danger w-75" value="Delete"/>
                </div>
                <div class="col">
                 <a asp-action="Index" class="btn btn-success w-75">Back</a>
                </div>
         </div>
        </div>
    </div>
    </div>
</div>
</form>
@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
    }
